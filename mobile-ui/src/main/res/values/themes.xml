<resources>

    <style name="Research.ButterScotch.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_button_butterscotch</item>
        <item name="android:textColor">@color/appTextDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/rounded_button_text_size</item>
    </style>

    <style name="Research.Gray.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_button_gray</item>
        <item name="android:textColor">@color/appTextDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/rounded_button_text_size</item>
    </style>

    <style name="Research.TextButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/secondaryTint</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/image_button_text_size</item>
    </style>

    <style name="Research.ImageButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/secondaryTint</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/image_button_text_size</item>
    </style>

</resources>